---json
{
  "permalink": "feed.xml",
  "eleventyExcludeFromCollections": true,
  "metadata": {
    "title": "FinallyCanuck.com",
    "subtitle": "I am writing about things that likely only matter to me, because this is my space and not yours.",
    "language": "en-CA",
    "url": "https://finallycanuck.com/",
    "icon": "https://finallycanuck.com/favicon.ico",
    "author": {
      "name": "Peter Randazzo",
      "email": "pete@randazzo.ca"
    }
  }
}
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:webfeeds=”http://webfeeds.org/rss/1.0″ version=”2.0″>
  <channel>
    <atom:link href="{{ permalink | url | absoluteUrl(metadata.url) }}" rel="self" type="application/rss+xml" />
    <title>{{ metadata.title }}</title>
    <webfeeds:logo>https://finallycanuck.com/static.img/FinallyCanuck.png</webfeeds:logo>
    <webfeeds:accentColor>c42218</webfeeds:accentColor>
    <description>{{ metadata.subtitle }}</description>
    <link>{{ metadata.url }}</link>
    <language>{{ metadata.language }}</language>
    <copyright>Copyright © {{ settings.name }} {{ helpers.currentYear() }}.</copyright>
    <lastBuildDate>{{ collections.posts | getNewestCollectionItemDate | dateToRfc822 }}</lastBuildDate>
    <webMaster>pete@randazzo.ca ({{ settings.author }})</webMaster>
    <image>
      <title>{{ settings.name }}</title>
      <url>{{ settings.image }}</url>
      <link>{{ metadata.url }}</link>
    </image>
    {%- for post in collections.post | reverse %}
    {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(metadata.url) }}{% endset %}
    <item>
      <title>{{ post.data.title }}</title>
      <description>{{ post.data.description }}</description>
      <guid>{{ absolutePostUrl }}</guid>
      <link>{{ absolutePostUrl }}</link>
      <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
    </item>
    {%- endfor %}
  </channel>
</rss>