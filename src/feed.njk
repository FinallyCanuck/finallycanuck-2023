---json
{
  "permalink": "feed.xml",
  "eleventyExcludeFromCollections": true,
  "metadata": {
    "title": "FinallyCanuck.com",
    "subtitle": "I am writing about things that likely only matter to me, because this is my space and not yours.",
    "language": "en-CA",
    "url": "https://finallycanuck.com/",
    "icon": "https://finallycanuck.com/favicon.ico",
    "author": {
      "name": "Peter Randazzo",
      "email": "pete@randazzo.ca"
    }
  }
}
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:wfw="http://wellformedweb.org/CommentAPI/" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:sy="http://purl.org/rss/1.0/modules/syndication/" xmlns:slash="http://purl.org/rss/1.0/modules/slash/" xmlns:georss="http://www.georss.org/georss" xmlns:geo="http://www.w3.org/2003/01/geo/wgs84_pos#">
  <channel>
    <atom:link href="{{ permalink | url | absoluteUrl(metadata.url) }}" rel="self" type="application/rss+xml" />
    <title>{{ metadata.title }}</title>
    <webfeeds:logo>https://finallycanuck.com/static/img/FinallyCanuck.svg</webfeeds:logo>
    <webfeeds:accentColor>c42218</webfeeds:accentColor>
    <description>{{ metadata.subtitle }}</description>
    <link>{{ metadata.url }}</link>
    <language>{{ metadata.language }}</language>
    <generator>{{ eleventy.generator }}</generator>
    <copyright>Copyright Â© {{ settings.name }} {{ helpers.currentYear() }}.</copyright>
    <lastBuildDate>{{ collections.posts | getNewestCollectionItemDate | dateToRfc822 }}</lastBuildDate>
    <webMaster>{{ settings.email }} ({{ settings.author }})</webMaster>
    <image>
      <title>{{ settings.name }}</title>
      <url>{{ settings.image }}</url>
      <link>{{ metadata.url }}</link>
      <width>238</width>
      <height>238</height>
    </image>
    {%- for post in collections.post | reverse %}
    {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(metadata.url) }}{% endset %}
    <item>
      <title>{{ post.data.title }}</title>
      <description>{{ post.data.description }}</description>
      <guid>{{ absolutePostUrl }}</guid>
      <link>{{ absolutePostUrl }}</link>
      <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
    </item>
    {%- endfor %}
  </channel>
</rss>